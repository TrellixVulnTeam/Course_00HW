<div class="mt-4" style="margin-bottom: 50px;">
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <h2> Cập nhật smartphone cho bạn nào:</h2>
        <div class="form-group">
            <label for="name">Tên máy</label>
            <input type="text" class="form-control" value="{{course.name}}" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="videoId">Link sản phẩm</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId" id="videoId">
        </div>
        <div class="form-group">
            <label for="information">Thông tin sản phẩm</label>
            <textarea class="form-control" value="{{course.information}}" name="information"
                id="information">{{course.information}}</textarea>
        </div>
        <div class="form-group">
            <label for="level">Phân loại</label>
            <input type="text" class="form-control" value="{{course.level}}" name="level" id="level">
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>